<UserControl x:Class="WPFGAME.Views.Shop"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFGAME.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:ShopVM/>
    </UserControl.DataContext>

    <Grid>
        <ItemsControl ItemsSource="{Binding ShopItems}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Foreground="Black" Text="{Binding Name}" Margin="10"/>
                        <TextBlock Foreground="Black" Text="{Binding Price, StringFormat='Price: {0:C}'}" Margin="10"/>
                        <Button Content="Buy" Command="{Binding DataContext.BuyCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" CommandParameter="{Binding}"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
